{
  "tasks": {
    "make": "deno run --allow-env --allow-read --allow-write=.deno-make.json --allow-run=deno ./mod.ts $0"
  },
  "+tasks": {
    "flags:none": {
      "task": "deno fmt mod.ts",
      "cwd": "tests"
    },
    "flags:boolean_true": {
      "task": "deno fmt mod.ts",
      "cwd": "tests",
      "deno": {
        "fmt": {
          "check": true,
          "tabs": true,
          "singleQuote": true,
          "semicolons": true
        }
      }
    },
    "flags:boolean_false": {
      "task": "deno fmt mod.ts",
      "cwd": "tests",
      "deno": {
        "fmt": {
          "check": false,
          "tabs": false,
          "singleQuote": false,
          "semicolons": false
        }
      }
    },
    "flags:string": {
      "task": "deno fmt mod.ts",
      "cwd": "tests",
      "deno": {
        "fmt": {
          "proseWrap": "always",
          "ext": "js"
        }
      }
    },
    "flags:number": {
      "task": "deno fmt mod.ts",
      "cwd": "tests",
      "deno": {
        "fmt": {
          "lineWidth": 80,
          "indentWidth": 2
        }
      }
    },
    "flags:array": {
      "task": "deno fmt mod.ts",
      "cwd": "tests",
      "deno": {
        "fmt": {
          "ignore": ["*"]
        }
      }
    },
    "flags:array_empty": {
      "task": "deno fmt mod.ts",
      "cwd": "tests",
      "deno": {
        "fmt": {
          "ignore": []
        }
      }
    }
  }
}
