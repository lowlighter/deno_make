{
  "tasks": {
    "make": "deno run --allow-env --allow-read --allow-write=.deno-make.json --allow-run=deno ./mod.ts $0"
  },
  "+tasks": {
    "flags:none": {
      "task": "deno lint",
      "cwd": "tests"
    },
    "flags:json": {
      "task": "deno lint",
      "cwd": "tests",
      "deno": {
        "lint": {
          "json": true,
          "compact": false
        }
      }
    },
    "flags:compact": {
      "task": "deno lint",
      "cwd": "tests",
      "deno": {
        "lint": {
          "compact": true,
          "json": false
        }
      }
    },
    "flags:array": {
      "task": "deno lint",
      "cwd": "tests",
      "deno": {
        "lint": {
          "ignore": ["*.js"]
        }
      }
    },
    "flags:array_empty": {
      "task": "deno lint",
      "cwd": "tests",
      "deno": {
        "lint": {
          "ignore": []
        }
      }
    },
    "flags:rules": {
      "task": "deno lint",
      "cwd": "tests",
      "deno": {
        "lint": {
          "rules": {
            "tags": ["recommended"],
            "include": ["single-var-declarator"],
            "exclude": ["no-deprecated-deno-api"]
          }
        }
      }
    },
    "flags:rules_empty": {
      "task": "deno lint",
      "cwd": "tests",
      "deno": {
        "lint": {
          "rules": {
            "tags": [],
            "include": [],
            "exclude": []
          }
        }
      }
    }
  }
}
