{
  "tasks": {
    "make": "deno run --allow-env --allow-read --allow-write=.deno-make.json --allow-run=deno ./mod.ts $0"
  },
  "+tasks": {
    "flags:none": {
      "task": "deno coverage tests/.coverage"
    },
    "flags:filters": {
      "task": "deno coverage tests/.coverage",
      "deno": {
        "coverage": {
          "include": "^file:",
          "exclude": "(js|mjs|ts|jsx|tsx)"
        }
      }
    },
    "flags:lcov": {
      "task": "deno coverage tests/.coverage",
      "deno": {
        "coverage": {
          "lcov": true,
          "output": "tests/.coverage.report"
        }
      }
    }
  }
}
