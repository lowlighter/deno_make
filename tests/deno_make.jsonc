{
  "tasks": {
    "make": "deno run --allow-env --allow-read --allow-write=.deno-make.json --allow-run=deno ./mod.ts $0"
  },
  "+tasks": {
    "make:empty": {
      "task": "deno help"
    },
    "make:task": {
      "task": "deno info",
      "cwd": "tests",
      "description": "ðŸ¦• test",
      "deno": {
        "info": {
          "quiet": true
        }
      },
      "env": {
        "DINOSAUR": "ðŸ¦–",
        "TEST_INHERIT": true
      }
    },
    "make:args": {
      "task": "echo '$<foo> / $<bar>'",
      "cwd": "tests",
      "args": [
        {
          "alias": "foo",
          "required": true
        },
        {
          "alias": "bar",
          "default": "ðŸ¦–"
        },
        {
          "alias": "baz"
        }
      ]
    },
    "make:args_pass_all": {
      "task": "echo '$<*>'",
      "cwd": "tests"
    },
    "make:flags": {
      "task": "echo '$<foo> / $<bar>'",
      "cwd": "tests",
      "flags": {
        "foo": {
        },
        "bar": {
          "alias": "b",
          "default": "ðŸ¦–"
        }
      }
    },
    "make:multiline": {
      "task": ["deno help"],
      "cwd": "tests",
      "description": ["ðŸ¦• test"]
    },
    "make:exit": {
      "task": "exit 1"
    },
    "make:rm_deno_make_json": {
      "task": "rm -r .deno-make.json"
    }
  }
}
