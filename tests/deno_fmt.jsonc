{
  "tasks": {
    "make": "deno run --allow-env --allow-read --allow-write=.deno-make.json --allow-run=deno ./mod.ts $0"
  },
  "+tasks": {
    "flags:none": {
      "task": "deno check tests/mod.ts"
    },
    "flags:fmt": {
      "task": "deno check tests/mod.ts",
      "deno": {
        "fmt": {
          "check": true,
          "tabs": true,
          "lineWidth": 80,
          "indentWidth": 2,
          "singleQuote": true,
          "semicolons": false,
          "proseWrap": "always",
          "ignore": ["*"],
          "ext": "js"
        }
      }
    }
  }
}
